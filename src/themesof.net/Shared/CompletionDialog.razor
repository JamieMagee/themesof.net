@if (Visible)
{
<div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleLabel">@Title</h5>
                <button type="button" class="close" @onclick="@Close" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input @ref="_inputRef"
                           id="lastName" class="form-control" placeholder="Filter"
                           @bind="FilterText" @bind:event="oninput" @onkeydown="OnKeyDown"></input>
                    <div @ref="_completionListRef"
                         class="completion-list mt-1">
                        @foreach (var item in _filteredItems)
                        {
                            var selectedClass = item == SelectedItem ? "selected" : "";
                            <div class="completion-list-item @selectedClass" @onclick="() => Select(item)">@item</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
